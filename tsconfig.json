{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "target": "es2022",
    "module": "nodenext",
    "declarationDir": "./types",
    "outDir": "./dist",
    "declarationMap": true,
    "types": ["vitest/globals"]
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/__tests__",
    "node_modules"
  ]
}
